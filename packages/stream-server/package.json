{
  "name": "@youtuber/stream-server",
  "version": "1.0.0",
  "description": "YouTube 스트리밍 오버레이 서버",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node esbuild.config.mjs",
    "build:tsc": "tsc",
    "build:analyze": "ANALYZE=1 node esbuild.config.mjs",
    "start": "node dist/server.js",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix"
  },
  "dependencies": {
    "@youtuber/shared": "workspace:*",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "obs-websocket-js": "^5.0.6",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.12",
    "esbuild": "^0.27.2",
    "tsx": "^4.15.6",
    "typescript": "^5.5.0"
  }
}
